{
  "name": "tmdb",
  "description": "A movie explorer using TMDB (The Movie Database) API",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "gen:type": "rm -rf src/__generated__/api; openapi-generator-cli generate -i ./api.yaml -o src/__generated__/api -g typescript-fetch --additional-properties=supportsES6=true,modelPropertyNaming=snake_case,npmVersion=6.9.0,typescriptThreePlus=true",
    "dev": "yarn gen:type && webpack serve --config webpack.config.js",
    "build": "webpack --config webpack.config.js",
    "test": "yarn gen:type && jest",
    "test:watch": "yarn test -- --watch",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.6",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@openapitools/openapi-generator-cli": "^2.4.26",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "axios": "^0.26.1",
    "express": "^4.17.2",
    "framer-motion": "^6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "regenerator-runtime": "^0.13.9",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@chakra-ui/storybook-addon": "^1.0.3",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/jest": "^0.0.9",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@storybook/testing-react": "^1.2.3",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.6.0",
    "cypress": "^9.5.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "msw": "^0.38.1",
    "prettier": "2.6.0",
    "style-loader": "^3.3.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
